@model FutureValueModel

@{
    //  Dynamically add the title
    ViewBag.Title = "Future Value Calculator";
}

<div class="container">
    <header class="jumbotron">
        <img id="logo" 
             src="~/images/fvalue.jpg" 
             alt="Future Value App Logo"
             class="img-responsive"/>
        <h1 class="mt-3">@ViewBag.Title</h1>
    </header>
    <form asp-controller="Home" asp-action="Index" method="post" class="horizontal">
        <div asp-validation-summary="All" class="text-danger font-weight-bold"></div>

        <div class="row">
            <label asp-for="MonthlyInvestment" class="contol-label col-3">Monthly Investment</label>
            <input asp-for="MonthlyInvestment" class="form-control col-3"/>
            @* <span asp-validation for="@Model.MonthlyInvestment" 
                  class="text-danger font-weight-bold col"></span> *@
        </div>

        <div class="row">
            <label asp-for="YearlyInterestRate" class="contol-label col-3">Yearly Interest Rate</label>
            <input asp-for="YearlyInterestRate" class="form-control col-3" />
            @* <span asp-validation for="@Model.YearlyInterestRate"
                  class="text-danger font-weight-bold col"></span> *@
        </div>

        <div class="row">
            <label asp-for="Years" class="contol-label col-3">Number of Years</label>
            <input asp-for="Years" class="form-control col-3" />
            @* <span asp-validation for="@Model.Years"
                  class="text-danger font-weight-bold col"></span> *@
        </div>

        <div class="row">
            <label>Future Value</label>
            <label>@ViewBag.FutureValue</label>
        </div>

        <button type="submit">Calculate</button>
        <a asp-controller="Home" asp-action="Index">Clear</a>
    </form>
</div>
